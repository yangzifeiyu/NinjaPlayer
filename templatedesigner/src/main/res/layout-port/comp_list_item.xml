<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:paddingLeft="@dimen/compIconMarginH"
    android:paddingRight="@dimen/compIconMarginH"
    android:paddingTop="@dimen/compIconMarginV"
    android:paddingBottom="@dimen/compIconMarginV"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/comp_type_img"
        android:layout_width="@dimen/compIcon"
        android:layout_height="@dimen/compIcon"
        android:src="@drawable/filedialog_audio"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/comp_type"
        style="@style/myTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="@dimen/textSizeBig"
        android:visibility="visible"
        android:textAlignment="center" />

</LinearLayout>
