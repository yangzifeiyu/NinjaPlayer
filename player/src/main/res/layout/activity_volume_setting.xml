<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_volume"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/list_loading_time"
        android:layout_alignBottom="@+id/list_loading_time"
        android:layout_alignRight="@+id/bar_volume"
        android:text="10" />

    <TextView
        android:id="@+id/list_loading_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="123dp"
        android:layout_toLeftOf="@+id/tv_volume"
        android:text="CurrentVolume" />

    <ImageView
        android:id="@+id/iv_volume"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/list_loading_time"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/bar_volume"
        android:src="@drawable/logo" />

    <SeekBar
        android:id="@+id/bar_volume"
        android:layout_width="280dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/iv_volume"
        android:layout_centerHorizontal="true"
        android:max="15" />

</RelativeLayout>