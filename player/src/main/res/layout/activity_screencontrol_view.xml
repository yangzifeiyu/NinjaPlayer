<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <Button
        android:id="@+id/btn_portrait"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_below="@+id/btn_landscape"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style"
        android:text="Portrait" />

    <Button
        android:id="@+id/btn_rportrait"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/btn_portrait"
        android:layout_below="@+id/btn_portrait"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_style"
        android:text="Reverse Portrait" />

    <ImageView
        android:id="@+id/iv_screen_status"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:src="@drawable/logo1" />

    <Button
        android:id="@+id/btn_landscape"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/btn_portrait"
        android:layout_below="@+id/iv_screen_status"
        android:layout_marginTop="17dp"
        android:background="@drawable/button_style"
        android:text="Landscape" />

</RelativeLayout>
