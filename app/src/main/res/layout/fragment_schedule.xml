<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="com.mfusion.ninjaplayer.FragmentClass.ScheduleFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/designer"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">

        <com.mfusion.scheduledesigner.ScheduleDesigner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/schedule_view"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sche_title"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical|right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/sche_warning_view"
            android:layout_marginRight="10dp"
            android:textColor="@color/warningColor" />

        <com.mfusion.commons.view.ImageTextView
            android:id="@+id/sche_save"
            android:layout_width="wrap_content"
            android:layout_height="28dp" />

        <com.mfusion.commons.view.ImageTextView
            android:id="@+id/sche_assign"
            android:layout_width="wrap_content"
            android:layout_height="28dp" />

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/sche_open"
            android:src="@android:drawable/ic_menu_upload_you_tube"  />

    </LinearLayout>
</RelativeLayout>
