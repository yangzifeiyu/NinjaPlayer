<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".New.MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="@dimen/config_name_width"
                android:layout_height="match_parent"
                android:text="Orientation:"
                android:id="@+id/textView2"
                android:textSize="15dp"
                android:textColor="#3b5998"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/textView3"
                android:textStyle="bold"
                android:gravity="center|start"
                android:paddingLeft="25dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:id="@+id/myRadioGroup">


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/landscape"
                    android:textSize="12dp"
                    android:textColor="#3b5998"
                    android:drawableLeft="@drawable/phoneport"
                    android:layout_marginLeft="10dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/portrait"
                    android:textSize="12dp"
                    android:textColor="#3b5998"
                    android:drawableLeft="@drawable/portrait"
                    android:layout_marginLeft="10dp" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp">

            <CheckBox
                android:layout_width="@dimen/config_name_width"
                android:layout_height="20dp"
                android:text="Set Password"
                android:id="@+id/chPassword2"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:textColor="@color/config_text"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <EditText
                    android:layout_width="@dimen/config_property_text_width"
                    android:layout_height="wrap_content"
                    android:id="@+id/etPassword"
                    android:inputType="textPassword"
                    android:textColorHint="@color/config_text"
                    android:gravity="center"
                    android:hint="@string/edittext_hint"
                    android:textSize="12dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_bg" />

                <TextView
                    android:layout_width="@dimen/config_property_text_width"
                    android:layout_height="35dp"
                    android:id="@+id/txtStatusPa"
                    android:textSize="11dp"
                    android:gravity="right"
                    android:layout_gravity="center" />

                <EditText
                    android:layout_width="@dimen/config_property_text_width"
                    android:layout_height="wrap_content"
                    android:id="@+id/etMatch"
                    android:inputType="textPassword"
                    android:textColorHint="@color/config_text"
                    android:gravity="center"
                    android:hint="@string/edittext_hint2"
                    android:textSize="12dp"
                    android:clickable="false"
                    android:background="@drawable/edittext_bg" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp">

            <CheckBox
                android:layout_width="@dimen/config_name_width"
                android:layout_height="wrap_content"
                android:text="Set Shutdown Time"
                android:id="@+id/chshut3"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:textColor="@color/config_text"
                android:textStyle="bold" />

            <EditText
                android:background="@drawable/edittext_bg"
                android:layout_width="@dimen/config_property_text_width"
                android:layout_height="wrap_content"
                android:id="@+id/edTvtime"
                android:textColorHint="@color/config_text"
                android:gravity="center"
                android:textSize="12dp"
                android:layout_gravity="center" />

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/btnImgShut"
                android:background="@drawable/config_shutdown"
                android:src="@drawable/selector"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/config_property_btn_left" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp">

            <CheckBox
                android:layout_width="@dimen/config_name_width"
                android:layout_height="20dp"
                android:text="Set Wakeup Time"
                android:id="@+id/chwake3"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:textColor="@color/config_text"
                android:textStyle="bold" />

            <EditText
                android:background="@drawable/edittext_bg"
                android:layout_width="@dimen/config_property_text_width"
                android:layout_height="wrap_content"
                android:id="@+id/edTvwtime"
                android:textColorHint="@color/config_text"
                android:gravity="center"
                android:textSize="12dp"
                android:layout_gravity="center" />

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/btnImgWake"
                android:background="@drawable/config_wakeup"
                android:layout_alignTop="@+id/chwake3"
                android:layout_alignStart="@+id/btnImgShut"
                android:src="@drawable/selector"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/config_property_btn_left" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/config_warning_view"
                android:textColor="@color/warningColor"
                android:textSize="@dimen/textSize"
                android:layout_marginRight="10dp" />
            <com.mfusion.commons.view.ImageTextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/btnContinue" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
