<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".New.MainActivity">

    <Button

        android:background="@drawable/mybutton"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Save Settings"
        android:id="@+id/btnContinue"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView5"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display:"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:textColor="#3b5998"
        android:layout_alignTop="@+id/myRadioGroup"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"/>

    <RadioGroup
        android:layout_width="205dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:id="@+id/myRadioGroup"
        android:gravity="center"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvW"
        android:layout_toStartOf="@+id/btnCheck">

        <RadioButton
            android:layout_width="104dp"
            android:layout_height="100dp"
            android:id="@+id/portrait"
            android:textSize="30dp"
            android:textColor="#3b5998"
            android:drawableLeft="@drawable/phoneland80"
            android:layout_weight="0.27"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/landscape"
            android:textSize="30dp"
            android:textColor="#3b5998"
            android:drawableLeft="@drawable/phoneport100"
            />


    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit Password:"
        android:id="@+id/textView3"
        android:textSize="30dp"
        android:textColor="#3b5998"
        android:layout_alignTop="@+id/etPassword"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shutdown Time:"
        android:id="@+id/textView4"
        android:textSize="30dp"
        android:textColor="#3b5998"
        android:layout_alignBottom="@+id/btnImgShut"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wakeup Time:"
        android:id="@+id/textView5"
        android:textSize="30dp"
        android:textColor="#3b5998"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/btnContinue"
        android:layout_alignParentStart="true"/>

    <EditText
        android:background="@drawable/edittext_bg"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/etPassword"
        android:inputType="textPassword"
        android:textColorHint="#3b5998"
        android:gravity="center"
        android:hint="@string/edittext_hint"
        android:textSize="30dp"
        android:layout_below="@+id/myRadioGroup"
        android:layout_alignStart="@+id/myRadioGroup"
        android:layout_marginTop="34dp"
        android:layout_alignEnd="@+id/myRadioGroup"/>

    <Button

        android:background="@drawable/mybutton"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:text="Check Pass"
        android:id="@+id/btnCheck"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="36dp"
        android:layout_alignBottom="@+id/etPassword"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/etPassword"/>

    <!--<Button-->

    <!--android:background="@drawable/mybutton"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="Delete"-->
    <!--android:id="@+id/btnDelete"-->
    <!--android:layout_marginLeft="28dp"-->
    <!--android:textSize="12dp"-->
    <!--android:layout_below="@+id/textView6"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:textColor="#ffffff"/>-->

    <TextView
        android:layout_width="340dp"
        android:layout_height="28dp"
        android:id="@+id/txtStatusPa"
        android:textSize="11dp"
        android:gravity="center|bottom"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btnCheck"
        android:layout_below="@+id/textView5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvTime"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/myRadioGroup"
        android:layout_alignStart="@+id/etPassword"
        android:layout_alignTop="@+id/textView4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvW"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/txtStatusPa"
        android:layout_alignTop="@+id/textView5"
        android:layout_toStartOf="@+id/btnCheck"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnImgShut"
        android:background="@drawable/shut"
        android:layout_marginEnd="54dp"
        android:layout_above="@+id/btnImgWake"
        android:layout_alignEnd="@+id/btnCheck"
        android:layout_marginBottom="35dp"/>

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/btnImgWake"
        android:background="@drawable/wake"
        android:layout_alignBottom="@+id/tvW"
        android:layout_alignStart="@+id/btnImgShut"/>

</RelativeLayout>
