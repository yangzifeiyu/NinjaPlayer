<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
		android:layout_marginTop="@dimen/propertyHSpace">
	         
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="@dimen/propertyName"
	            android:layout_height="match_parent"
				android:text="Font :"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textSize="@dimen/textSize"
				style="@style/property_name" />
	
	        <TextView
	            android:id="@+id/comp_dt_font"
	            style="@style/myFontStrStyle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:ellipsize="end"
	            android:text="0, 0"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textSize="@dimen/textSize" />
	
	        <ImageButton
	            android:id="@+id/comp_dt_font_btn"
	            android:layout_width="@dimen/propertyEditBtn"
	            android:layout_height="@dimen/propertyEditBtn"
	            android:layout_gravity="left|top|center"
	            android:background="#00ffffff"
	            android:src="@drawable/mf_edit"
				android:scaleType="fitCenter"
				android:padding="@dimen/propertyEditBtnPadding" />
	        
	    </LinearLayout>
	    
		<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
			android:layout_marginTop="@dimen/propertyHSpace">
	         
	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="@dimen/propertyName"
	            android:layout_height="match_parent"
				android:text="Font Color :"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textSize="@dimen/textSize"
				style="@style/property_name" />
		
			<Button
			    android:id="@+id/comp_dt_font_color_btn"
			    android:layout_width="@dimen/colorEditBtn"
			    android:layout_height="@dimen/colorEditBtn"
			    android:layout_gravity="left|top"
			    android:background="#000000" />

	    </LinearLayout>

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/propertyHSpace"
	        android:orientation="horizontal"
			android:gravity="center_vertical">
	         
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="@dimen/propertyName"
	            android:layout_height="match_parent"
	            android:layout_gravity="left|center"
				android:text="Format :"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textSize="@dimen/textSize"
				style="@style/property_name" />

			<TextView
				android:id="@+id/comp_dt_format"
				style="@style/myFontStrStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:background="@drawable/button_style"
				android:ellipsize="end"
				android:text="yyyy-MM-dd"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textSize="@dimen/textSize" />
	    </LinearLayout>

</LinearLayout>
