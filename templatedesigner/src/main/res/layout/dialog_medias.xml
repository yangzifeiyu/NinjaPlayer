<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/temp_sche_media_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

     <RelativeLayout
         android:id="@+id/comp_sche_control"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >
        
	    <com.mfusion.commons.view.ImageTextView
	        android:id="@+id/comp_media_add"
	        android:layout_width="wrap_content"
	        android:layout_height="26dp"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
			android:layout_marginRight="5dp" />


	    <CheckBox
	        android:id="@+id/comp_media_mute"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/comp_sche_name"
	        android:layout_alignParentTop="true"
	        android:text="Mute"
			android:visibility="gone" />

    </RelativeLayout>

    <ListView
        android:id="@+id/comp_comp_medias"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </ListView>

</LinearLayout>