<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".New.MainActivity">

    <Button

        android:background="@drawable/mybutton"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Save"
        android:id="@+id/btnContinue"
        android:textSize="12dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/myRadioGroup"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtStatusPa"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display:"
        android:id="@+id/textView2"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView3"
        android:textStyle="bold"/>

    <RadioGroup
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/myRadioGroup"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etPassword">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/portrait"
            android:textSize="12dp"
            android:textColor="#3b5998"
            android:drawableLeft="@drawable/portrait"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:id="@+id/landscape"
            android:textSize="12dp"
            android:textColor="#3b5998"
            android:drawableLeft="@drawable/phoneport"
            />


    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit Password:"
        android:id="@+id/textView3"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:layout_alignTop="@+id/etPassword"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shutdown Time:"
        android:id="@+id/textView4"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/etMatch"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wakeup Time:"
        android:id="@+id/textView5"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:layout_alignTop="@+id/tvW"
        android:layout_alignParentStart="true" />

    <EditText
        android:background="@drawable/edittext_bg"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/etPassword"
        android:inputType="textPassword"
        android:textColorHint="#3b5998"
        android:gravity="center"
        android:hint="@string/edittext_hint"
        android:textSize="12dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/myRadioGroup"
        android:layout_toEndOf="@+id/btnImgShut"
        android:layout_marginStart="51dp"/>

    <!--<Button-->

    <!--android:background="@drawable/mybutton"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="Delete"-->
    <!--android:id="@+id/btnDelete"-->
    <!--android:layout_marginLeft="28dp"-->
    <!--android:textSize="12dp"-->
    <!--android:layout_below="@+id/textView6"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:textColor="#ffffff"/>-->

    <TextView
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:id="@+id/txtStatusPa"
        android:textSize="11dp"
        android:gravity="center|bottom"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvTime"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/etMatch"
        android:layout_alignEnd="@+id/etMatch"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvW"
        android:gravity="center"
        android:layout_above="@+id/btnContinue"
        android:layout_alignStart="@+id/tvTime"
        android:layout_toStartOf="@+id/btnContinue"
        android:layout_alignEnd="@+id/tvTime"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnImgShut"
        android:background="@drawable/shut"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnImgWake"
        android:background="@drawable/wake"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/btnImgShut" />

    <EditText
        android:background="@drawable/edittext_bg"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/etMatch"
        android:inputType="textPassword"
        android:textColorHint="#3b5998"
        android:gravity="center"
        android:hint="@string/edittext_hint2"
        android:textSize="12dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/etPassword"
        android:clickable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password:"
        android:id="@+id/textView6"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:layout_alignTop="@+id/etMatch"
        android:layout_alignParentStart="true" />

</RelativeLayout>
