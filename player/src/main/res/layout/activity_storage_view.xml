<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/tv_sdcard_storage"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/tv_internal_storage"
            android:text="text"
            android:textColor="@color/black" android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_internal_storage"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/list_loading_time"
            android:text="TextViewTextViewTextView"
            android:textColor="@color/black" android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_internal_storage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/storage_internal" />

        <ImageView
            android:id="@+id/iv_sdcord_storage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toLeftOf="@+id/list_loading_time"
            android:src="@drawable/storage_sdcard" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_loading_time"
            android:layout_marginTop="28dp"
            android:layout_toLeftOf="@+id/tv_internal_storage"
            android:text="SdCard Storage :"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/list_loading_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_internal_storage"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/iv_internal_storage"
            android:text="Internal Storage :"
            android:textColor="@color/black" />

    </RelativeLayout>

</RelativeLayout>
