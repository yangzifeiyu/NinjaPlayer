<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <!-- <com.mfusion.templatedesigner.olddesigner.TemplateDesigner
    android:id="@+id/template_designer"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="8"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:gravity="center_vertical|right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/template_warning_view"
            android:textColor="@color/warningColor" />

        <com.mfusion.commons.view.ImageTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Save"
            android:id="@+id/template_designing_view_btn_save"
            android:textSize="@dimen/textSizeSmall"
            android:layout_alignParentRight="true"
            android:paddingTop="0dp"
            android:paddingBottom="0dp" />

        <com.mfusion.commons.view.ImageTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:id="@+id/template_designing_view_btn_cancel"
            android:textSize="@dimen/textSizeSmall"
            android:layout_alignParentRight="true"
            android:paddingBottom="0dp"
            android:paddingTop="0dp" />

    </LinearLayout>

    <com.mfusion.templatedesigner.TemplateEditPreviewLayout
        android:id="@+id/template_designer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>